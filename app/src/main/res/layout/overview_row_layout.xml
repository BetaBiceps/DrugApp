<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowID"
    android:background="@color/caldroid_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="right">


    <TextView
        android:id="@+id/drugName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/caldroid_gray"
        android:text="DrugName"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/drugTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/caldroid_gray"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/paddingLeftRightOverview"
            android:paddingRight="@dimen/paddingLeftRightOverview"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/drugTotal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/caldroid_gray"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/paddingLeftRightOverview"
            android:paddingRight="@dimen/paddingLeftRightOverview"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/drugTotal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/caldroid_gray"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/paddingLeftRightOverview"
            android:paddingRight="4dp"
            android:textStyle="italic"
            />
    </LinearLayout>


</LinearLayout>