<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemView"
    android:background="@color/caldroid_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="right">

    <TextView
        android:id="@+id/txt_eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/caldroid_gray"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/caldroid_gray"
        android:paddingBottom="@dimen/paddingBottom"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:paddingTop="@dimen/paddingTop"
        android:text="Time"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_eventDrug"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/caldroid_gray"
        android:paddingBottom="@dimen/paddingBottom"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:paddingTop="@dimen/paddingTop"
        android:text="DrugName"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/txt_eventDose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/caldroid_gray"
        android:paddingBottom="@dimen/paddingBottom"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:layout_gravity="right"
        android:paddingTop="@dimen/paddingTop"
        android:text="Dose"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="right"
        android:layout_weight="1"/>

</LinearLayout>