<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:background="@color/caldroid_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/txt_eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_eventName"
        android:background="@color/caldroid_gray"
        android:paddingBottom="8.0dip"
        android:paddingLeft="12.0dip"
        android:paddingRight="3.0dip"
        android:paddingTop="8.0dip"
        android:text="List Item1"
        android:textColor="#ffffffff"
        android:textSize="10.0pt"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txt_eventDate"
        android:background="@color/caldroid_gray"
        android:paddingBottom="8.0dip"
        android:paddingLeft="12.0dip"
        android:paddingRight="3.0dip"
        android:paddingTop="8.0dip"
        android:text="List Item2"
        android:textColor="#ffffffff"
        android:textSize="10.0pt"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_eventName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/caldroid_gray"
        android:paddingBottom="8.0dip"
        android:paddingLeft="12.0dip"
        android:paddingRight="3.0dip"
        android:paddingTop="8.0dip"
        android:text="List Item"
        android:textColor="#ffffffff"
        android:textSize="10.0pt"
        android:textStyle="italic" />

</LinearLayout> <!-- <?xml version="1.0" encoding="utf-8"?> -->
